<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar</title>
    <link rel="stylesheet" href="/static/index-page.css">
</head>

<body>
    <ul class="navbar">
        <li class="navbar-element"><a href={{ link1 }} class="underline"><span class="span-text">{{ link_text1
                    }}</span></a></li>
        <li class="navbar-element"><a href={{ link2 }} class="underline"><span class="span-text">{{ link_text2
                    }}</span></a></li>
        <li class="navbar-element"><a href="/"><img src="/static/images/logo_white.png" width="100" height="50"
                    class="logo"></a>
        </li>
    </ul>

    <div class="wraper-wide product-cards">
        {% for product in products %}
        <a href="/product_id={{ product.id }}" class="product-card">
            <img src="/static/images/{{ product.id }}.png" class="product-card__img">
            <div class="product-card__name">{{ product.name }}</div>
            <div class="product-card__price preview_price_wrap">
                <div>
                    {{ product.price }}
                </div>
            </div>
        </a>
        {% endfor %}
    </div>
</body>

</html>